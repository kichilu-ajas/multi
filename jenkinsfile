pipeline {
    agent any

   // tools {
        // Install the Maven version configured as "M3" and add it to the path.
     //   maven "M3"
    //}

    stages {
        stage('scm stage') {
            steps {
                // Get some code from a GitHub repository
                //go to pipeline syntax generator provide teh github and use the same auth
           git credentialsId: 'root_cred', url: 'git@github.com:kichilu-ajas/pipe1.git'  
            }
        }
         stage('Build') {
            steps {
                // Get some code from a GitHub repository
             sh 'mvn clean package'  
            }
        }
        stage('ansible_t') {
            steps {
                
                ansiblePlaybook credentialsId: 'root_cred', disableHostKeyChecking: true, inventory: 'ansible/dev.inv', playbook: 'ansible/tomcat.yml'  
            }
        }
        
    }
}
